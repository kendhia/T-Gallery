.container
  .form-signin
    %h2.form-signin-heading.title Sign up
    = form_for @user, :html => { :multipart => true } do |f|
      - if @user.errors.any?
        - for message in @user.errors.full_messages
          %div.alert-error
            %a.close{"data-dismiss" => "alert"} Ã—
            = message
      %p
        = f.label :name, "Name"
        = f.text_field :name
      %p
        = f.label :email, "Email adress"
        = f.text_field :email
      %p
        = f.label :password, "Password"
        %br/
        = f.password_field :password
      %p
        = f.label :password_confirmation, "Confrim Password"
        %br/
        = f.password_field :password_confirmation
    
      %button= f.submit  
